<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rs.readahead.washington.mobile.views.activity.EditMediaRecipientListActivity"
    tools:showIn="@layout/activity_edit_media_recipient_list">

    <View
        android:id="@+id/top_line"
        android:layout_alignParentTop="true"
        style="@style/EditMediaRecipientListTopLine"/>

    <RelativeLayout
        android:id="@+id/edit_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_line"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/edit_enable_image"
            style="@style/ImageViewSelector"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/edit_recipient_list"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/edit_recipient_list"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:scaleType="fitEnd"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            app:srcCompat="@drawable/edit_icon_selector" />

        <EditText
            android:id="@+id/edit_recipient_list"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/edit_enable_image"
            android:layout_toStartOf="@id/edit_enable_image"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@null"
            android:inputType="text"
            android:enabled="false"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/wa_button_gray"
        android:paddingTop="0.5dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/edit_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/button_pressed"
            android:text="@string/cancel"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/edit_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_pressed"
            android:text="@string/save"/>
    </LinearLayout>

    <ListView
        android:id="@+id/recipients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_bottom_layout"
        android:layout_below="@id/edit_top_layout"
        android:padding="3dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</RelativeLayout>
