<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="patternViewStyle">@style/PatternView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SettingsMainText">
        <!--<item name="android:checkMark">@drawable/checkbox_selector</item>-->
        <item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_pressed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="EraseDataCheckedText" parent="SettingsMainText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/wa_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyCheckTextView">
        <!--<item name="android:checkMark">@drawable/checkbox_selector</item>-->
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/button_pressed</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_darker_gray</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCheckTextViewNormal" parent="MyCheckTextView">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsMainLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/wa_gray</item>
    </style>

    <style name="EditMediaRecipientListTopLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/wa_darker_gray</item>
    </style>

    <style name="ButtonTextSmall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/wa_black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ImageViewSelector">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="OppressionImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.4</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="OppressionLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="OppressionTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/wa_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OppressionTextViewBlack" parent="OppressionTextView">
        <item name="android:textColor">@color/wa_black</item>
    </style>

    <style name="MainImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="MainImageViewLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MainTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/wa_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">2</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ClickableVerticalLinerLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_pressed_transparent</item>
    </style>

    <style name="TextViewBlack">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_black</item>
    </style>

    <style name="TextViewGray">
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_dialog_gray</item>
    </style>

    <style name="SettingsDescriptionTextView" parent="TextViewGray">
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AboutTextSeparator">
        <item name="android:background">@color/wa_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="AboutText">
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_dialog_gray</item>
    </style>

</resources>
