<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="patternViewStyle">@style/PatternView</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverse</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="patternViewStyle">@style/PatternView</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverse</item>

    </style>

    <style name="PhotoViewerTheme.NoActionBar" parent="AppTheme.NoActionBar">
        <!-- <item name="colorAccent">@color/wa_white</item> -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCheckTextView">
        <!--<item name="android:checkMark">@drawable/checkbox_selector</item>-->
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/button_pressed</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_darker_gray</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyCheckTextViewNormal" parent="MyCheckTextView">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingsMainLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/wa_gray</item>
    </style>

    <style name="EditMediaRecipientListTopLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/wa_darker_gray</item>
    </style>

    <style name="TrustedPersonListLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/wa_gray</item>
    </style>

    <style name="ButtonTextSmall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/wa_black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>


    <style name="ImageViewSelector">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="VerticalLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="HorizontalLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">31dp</item>
        <item name="android:paddingEnd">31dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="HorizontalLinearLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">31dp</item>
        <item name="android:paddingEnd">31dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ReportSwitchLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="ClickableVerticalLinerLayout" parent="VerticalLinearLayout">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_pressed_transparent</item>
    </style>

    <style name="ClickableHorizontalLinerLayout" parent="HorizontalLinearLayout">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_pressed_transparent</item>
    </style>

    <style name="SettingsClickableHorizontalLinerLayout">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/button_pressed_transparent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="SettingsImageViewStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:alpha">.6</item>
    </style>

    <style name="SettingsImageViewSize">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    
    <style name="CamouflageSettingsOptionImage" parent="@style/CamouflageSettingsOption">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">.1</item>
    </style>

    <style name="CamouflageSettingsOptionSelection" parent="@style/CamouflageSettingsOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.9</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CamouflageSettingsOption">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="CamouflageSettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="CamouflageSettingsTextBlack" parent="@style/CamouflageSettingsText">
        <item name="android:textColor">@color/wa_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CamouflageSettingsTextGray" parent="@style/CamouflageSettingsText">
        <item name="android:textColor">@color/wa_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsTextViewBlack" parent="@style/SettingsTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/wa_black</item>
        <item name="colorControlActivated">@color/wa_green</item>
    </style>

    <style name="SettingsTextViewGray" parent="@style/SettingsTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/wa_dialog_gray</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LineTextViewBlack" parent="@style/LineTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/wa_black</item>
        <item name="colorControlActivated">@color/wa_green</item>
    </style>

    <style name="LineTextViewGray" parent="@style/LineTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/wa_dialog_gray</item>
    </style>

    <style name="LineTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewBlack">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_black</item>
        <item name="colorControlActivated">@color/wa_green</item>
    </style>

    <style name="AboutTextSeparator">
        <item name="android:background">@color/wa_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="AboutText">
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_dialog_gray</item>
    </style>

    <style name="CollectBlankFormListButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <!--<item name="style">?android:attr/borderlessButtonStyle</item>-->
        <item name="android:background">@drawable/dark_outlined_button</item>
        <item name="android:textColor">@color/wa_gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">32sp</item>
    </style>

    <style name="CollectFormWidgetButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/dark_outlined_button</item>
        <item name="android:textColor">@color/wa_gray</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ExplanatoryEmptyMessageLeft" parent="@style/TopExplanatoryLayout">
        <item name="android:background">@color/wa_button_gray</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ReportHelpText">
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/wa_dark_gray</item>
    </style>

    <style name="ReportHelpMessage" parent="ReportHelpText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ExplanatoryEmptyMessage" parent="@style/TopExplanatoryLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/wa_dark_gray</item>
    </style>

    <style name="TopExplanatoryLayout">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="EmptyScreenExplanatoryText">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/wa_dark_gray</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/wa_black</item>
    </style>

    <style name="AppTheme.NoActionBarToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CameraTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/wa_black</item>
    </style>

    <style name="MainDividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/wa_dark_gray</item>
    </style>

    <style name="ReportInfoContainerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ReportInfoImageView">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ReportInfoTextView" parent="TopExplanatoryLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="NewReportCompletedIndicator">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NewReportRequiredText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/required</item>
    </style>

    <style name="NewReportRecommendedText" parent="NewReportRequiredText">
        <item name="android:text">@string/recommended</item>
    </style>

    <style name="NewReportFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="NewReportTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/wa_black</item>
        <item name="android:enabled">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NewReportHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RecipientTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/wa_black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="YellowButton">
        <item name="android:background">@drawable/button_pressed_yellow</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">18sp</item>
    </style>

    <style name="BottomYellowButton" parent="YellowButton">
        <item name="android:padding">20dp</item>
    </style>

    <style name="RecipientButtonNew">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">0.5dp</item>
        <item name="android:background">@drawable/button_pressed</item>
    </style>

    <style name="CameraZoomSeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/zoom_seek_bar_progress</item>
        <item name="android:indeterminateDrawable">@drawable/zoom_seek_bar_progress</item>
        <item name="android:thumb">@drawable/zoom_seek_bar_thumb</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/zoom_seek_bar_background</item>
    </style>

    <style name="NavigationTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NavigationTabText" parent="NavigationTab">
        <item name="android:paddingTop">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/navigation_tab_bar_text_size</item>
        <item name="android:textColor">@color/wa_white</item>
    </style>

    <style name="NavigationTabImage" parent="NavigationTab">
        <item name="android:gravity">center</item>
    </style>

    <style name="NavigationTabLayout">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/navigation_tab_bar_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PanicActiveText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/wa_white</item>
    </style>

    <style name="PanicArrowStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="GalerySortTextColor">
        <item name="android:textColor">@drawable/gallery_sort_menu_color_selector</item>
    </style>

    <style name="AttachmentsToolbarTitle">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/wa_dark_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="TextValidationError">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/wa_design_textinput_error_color</item>
    </style>
</resources>
