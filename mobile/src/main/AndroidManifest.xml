<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="rs.readahead.washington.mobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <service
            android:name="info.guardianproject.cacheword.CacheWordService"
            android:enabled="true"
            android:exported="false" />
        <service android:name=".util.DownloadTrainingService" />
        <service
            android:name=".util.OnClearFromRecentService"
            android:stopWithTask="false" />

        <receiver
            android:name=".util.OpenPassword"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="96357564e9129c887ba59fb3e0957fcc10c76115" />

        <activity
            android:name=".views.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activity.NewReportActivity"
            android:label="@string/reporting"
            android:parentActivityName=".views.activity.ReportSelectorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.ReportSelectorActivity" />
        </activity>
        <activity
            android:name=".views.activity.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.MainActivity" />
        </activity>
        <activity
            android:name=".views.activity.SecureMessagingActivity"
            android:label="@string/secure_messaging"
            android:parentActivityName=".views.activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activity.MainActivity" />
        </activity>
        <activity
            android:name=".views.activity.TrainingRoomActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_training_room_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activity.PanicModeActivity"
            android:label="@string/title_activity_panic_mode"
            android:parentActivityName=".views.activity.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.SettingsActivity" />
        </activity>
        <activity
            android:name=".views.activity.LockScreenActivity"
            android:label="@string/title_activity_lock_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activity.AudioRecordActivity"
            android:label="@string/title_activity_audio_record"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activity.ReportSelectorActivity"
            android:label="@string/title_activity_oppression_backfire_selector"
            android:parentActivityName=".views.activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.MainActivity" />
        </activity>
        <activity
            android:name=".views.activity.DraftReportsActivity"
            android:label="@string/title_activity_draft_reports"
            android:parentActivityName=".views.activity.ReportSelectorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.ReportSelectorActivity" />
        </activity>
        <activity
            android:name=".views.activity.ArchiveReportsActivity"
            android:label="@string/title_activity_archive_list"
            android:parentActivityName=".views.activity.ReportSelectorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.NewReportActivity" />
        </activity>
        <activity
            android:name=".views.activity.ActivationSettingsActivity"
            android:label="@string/title_activity_activation_settings"
            android:parentActivityName=".views.activity.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.SettingsActivity" />
        </activity>

        <activity
            android:name=".views.activity.SecurityActivity"
            android:label="@string/title_activity_security"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activity.NewPatternActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activity.AboutHelpActivity"
            android:label="@string/title_activity_about_help"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activity.MediaRecipients2Activity"
            android:label="@string/title_activity_media_recipients2"
            android:parentActivityName=".views.activity.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.SettingsActivity" />
        </activity>
        <activity
            android:name=".views.activity.EditMediaRecipientListActivity"
            android:label="@string/title_activity_edit_media_recipient_list"
            android:parentActivityName=".views.activity.MediaRecipients2Activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateUnchanged"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rs.readahead.washington.mobile.views.activity.MediaRecipients2Activity" />
        </activity>
    </application>

</manifest>